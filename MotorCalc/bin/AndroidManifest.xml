<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arax.motorcalc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.arax.motorcalc.MotorCalcApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.arax.motorcalc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arax.motorcalc.AnswerActivity"
            android:label="@string/title_activity_answer" >
        </activity>
        <activity
            android:name="com.arax.motorcalc.Test"
            android:label="Test" />
        <activity
            android:name="com.arax.motorcalc.yu"
            android:label="yu" />
        <activity
            android:name="com.arax.motorcalc.ShematicActivity"
            android:label="@string/title_activity_shematic"
            android:parentActivityName="roboguice.activity.RoboActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="roboguice.activity.RoboActivity" />
        </activity>
    </application>

</manifest>